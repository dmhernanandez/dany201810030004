<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dany201810030004.ListaUbicaciones">

    <StackLayout>
        <Label Text="{Binding Nombre}"/>
        <ListView x:Name="UbicacionesLista" SelectionMode="Single"
                  ItemsSource="{Binding Ubicacion}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="15,0" Orientation="Vertical">

                            <Label Text="{Binding IdUbicacion}" FontSize="15" FontAttributes="Bold" TextColor="DarkSlateBlue"/>
                            <Label Text="{Binding DescripcionLarga}" FontSize="10"/>
                        </StackLayout>

                        <ViewCell.ContextActions>
                            <MenuItem x:Name="OnUpdate"
                                          Text="Actualizar"
                                          CommandParameter="{Binding .}"/>
                            <MenuItem x:Name="OnDelete"
                                          Text="Eliminar"
                                          Clicked="OnDelete_Clicked"
                                          CommandParameter="{Binding .}"
                                          IsDestructive="true"/>
                        </ViewCell.ContextActions>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>